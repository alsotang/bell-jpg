export
unexport SUBDIRS


.PHONY : all
all: comm encoder


.PHONY : comm
comm:
	@( \
	for dir in $(COMMDIRS); do \
	  $(MAKE) -C $$dir; \
	done; \
	)

.PHONY : encoder
encoder:
	@( \
	for dir in $(DVRDIRS); do \
	  $(MAKE) -C $$dir; \
	done; \
	$(MAKE) -C $(WORKDIR) encoder; \
	)
.PHONY : clean
clean:
	@( \
	for dir in $(ALLDIRS); do \
	  $(MAKE) -C $$dir clean; \
	done; \
	)
